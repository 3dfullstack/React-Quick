#!/usr/bin/env node

/**
 * Module dependencies.
 */

var app = require('../server');
var debug = require('debug')('socket-server:server');
var http = require('http');
const socketIo = require("socket.io");
var md5 = require('md5');
/**
 * Get port from environment and store in Express.
 */

var port = normalizePort(process.env.PORT || '9123');
app.set('port', port);

/**
 * Create HTTP server.
 */
var server = http.createServer(app);
const io = socketIo(server);
let interval = 0;

io.on("connection", (socket) => {

  console.log("New client connected");

  if (interval) {
    clearInterval(interval);
  }

  interval = setInterval(() => CheckLiveNess(), 60000);

  socket.on('event_source', (data) => {
    console.log('event_source')
    console.log(data)
  })

  socket.on('pong', (data) => {
    console.log('pong_source')
    console.log(data)
  })

 })

const CheckLiveNess = async () => {
  const response = {
    message: "Live from Backend ðŸ‘Œ"
  }
  await io.emit('ping', response);
}

/**
 * Listen on provided port, on all network interfaces.
 */
server.listen(port);
server.on('error', onError);
server.on('listening', onListening);

/**
 * Normalize a port into a number, string, or false.
 */

function normalizePort(val) {
  var port = parseInt(val, 10);

  if (isNaN(port)) {
    // named pipe
    return val;
  }

  if (port >= 0) {
    // port number
    return port;
  }

  return false;
}

/**
 * Event listener for HTTP server "error" event.
 */

function onError(error) {
  if (error.syscall !== 'listen') {
    throw error;
  }

  var bind = typeof port === 'string'
    ? 'Pipe ' + port
    : 'Port ' + port;

  // handle specific listen errors with friendly messages
  switch (error.code) {
    case 'EACCES':
      console.error(bind + ' requires elevated privileges');
      process.exit(1);
      break;
    case 'EADDRINUSE':
      console.error(bind + ' is already in use');
      process.exit(1);
      break;
    default:
      throw error;
  }
}

/**
 * Event listener for HTTP server "listening" event.
 */

function onListening() {
  var addr = server.address();
  var bind = typeof addr === 'string'
    ? 'pipe ' + addr
    : 'port ' + addr.port;
  debug('Listening on ' + bind);
}
